{
  "title": "UptimePulse Dashboard",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Total API Requests (5m)",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(increase(api_gateway_requests_total[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 0, "w": 3, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Successful Pings",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(ping_success_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "gray", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "x": 3, "y": 0, "w": 3, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Failed Pings",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(ping_failure_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "gray", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "x": 6, "y": 0, "w": 3, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Availability %",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * (sum(ping_success_total) / (sum(ping_success_total) + sum(ping_failure_total)))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": { "x": 9, "y": 0, "w": 3, "h": 4 }
    },
    {
      "type": "timeseries",
      "title": "Requests by Status (rate)",
      "id": 5,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (status) (rate(api_gateway_requests_total[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 4, "w": 6, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Ping Success/Failures (rate)",
      "id": 6,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(ping_success_total[1m]))",
          "refId": "A"
        },
        {
          "expr": "sum(rate(ping_failure_total[1m]))",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "x": 6, "y": 4, "w": 6, "h": 6 }
    },
    {
      "type": "bargauge",
      "title": "Requests by Path (5m)",
      "id": 7,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (path) (increase(api_gateway_requests_total[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 10, "w": 6, "h": 6 }
    },
    {
      "type": "heatmap",
      "title": "API Latency Histogram (bucket rate)",
      "id": 8,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(api_gateway_request_duration_seconds_bucket[5m])) by (le)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "x": 6, "y": 10, "w": 6, "h": 6 }
    },
    {
      "type": "heatmap",
      "title": "Ping Latency Histogram (1m rate)",
      "id": 9,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(ping_latency_seconds_bucket[1m])) by (le)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 16, "w": 6, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Average Ping Latency (s)",
      "id": 10,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(ping_latency_seconds_sum[1m])) / sum(rate(ping_latency_seconds_count[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "x": 6, "y": 16, "w": 6, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "API Request Count (rate by path)",
      "id": 11,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (path) (rate(api_gateway_requests_total[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 22, "w": 8, "h": 6 }
    },
    {
      "type": "stat",
      "title": "Availability % (per target)",
      "id": 12,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * ping_success_total / (ping_success_total + ping_failure_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": { "x": 8, "y": 22, "w": 4, "h": 6 }
    }
  ],
  "templating": { "list": [] }
}
