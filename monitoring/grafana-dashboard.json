{
  "title": "UptimePulse Dashboard",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Successful Pings",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "ping_success_total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "gray", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Failed Pings",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "ping_failure_total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "gray", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "heatmap",
      "title": "Ping Latency Histogram (1m rate)",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(ping_latency_seconds_bucket[1m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Average Ping Latency (s)",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(ping_latency_seconds_sum[1m]) / rate(ping_latency_seconds_count[1m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 }
    }
  ],
  "templating": { "list": [] }
}
